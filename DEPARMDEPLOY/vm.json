{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vm_param": {
      "type": "object"
    }
  },
  "variables": {
    "vm": "[parameters('vm_param')]",
    "vm_fullname": "[concat(resourceGroup().name, '-', variables('vm').name)]",
    "vm_ID": "[resourceId('Microsoft.Compute/virtualMachines',variables('vm_fullname'))]",
    "vm_disk_name": "[concat(variables('vm_fullname'),'-OS')]",
    "avail_name": "[concat(resourceGroup().name, '-', variables('vm').name, '-AV')]",
    "avail_ID": "[resourceId('Microsoft.Compute/availabilitySets',variables('avail_name'))]",
    "vm_nic_name": "[concat(variables('vm_fullname'),'-INT')]",
    "vm_nic_ID": "[resourceId('Microsoft.Network/networkInterfaces', variables('vm_nic_name'))]",
    "VN_name": "[variables('vm').VN_name]",
    "VN_ID": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.Network/virtualNetworks/', variables('VN_name'))]",
    "VN_subnet_name": "[variables('vm').VN_subnet_name]",
    "VN_subnet_ID": "[concat(variables('VN_ID'), '/subnets/', variables('VN_subnet_name'))]",
    "ipconfigurationStatic": {
      "privateIPAddress": "[variables('vm').privateIPAddress]",
      "privateIPAllocationMethod": "Static",
      "subnet": {
        "id": "[variables('VN_subnet_ID')]"
      }
    },
    "ipconfigurationDynamic": {
      "privateIPAllocationMethod": "Dynamic",
      "subnet": {
        "id": "[variables('VN_subnet_ID')]"
      }
    },
    "ipconfiguration": "[variables(concat('ipconfiguration',variables('vm').ipconfiguration))]",
    "computeApiVersion": "2016-04-30-preview",
    "networkApiVersion": "2016-09-01"

  },
  "resources": [
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[variables('avail_name')]",
      "apiVersion": "2016-04-30-preview",
      "location": "[resourceGroup().location]",
      "properties": {
        "platformFaultDomainCount": "2",
        "platformUpdateDomainCount": "5",
        "managed": "true"
      }
    },
    {
      "apiVersion": "[variables('networkApiVersion')]",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(variables('vm_nic_name'),copyIndex(1))]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
      ],
      "copy": {
        "name": "niccopy",
        "count": "[variables('vm').count]"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": "[variables('ipconfiguration')]"
          }
        ]
      }
    },
    {
      "comments": "",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(variables('vm_fullname'),copyIndex(1))]",
      "apiVersion": "[variables('computeApiVersion')]",
      "location": "[resourceGroup().location]",
      "tags": "[variables('vm').tags]",
      "dependsOn": [
        "niccopy",
        "[variables('avail_ID')]"
      ],
      "copy": {
        "name": "vmcopy",
        "count": "[variables('vm').count]"
      },
      "properties": {
        "availabilitySet": {
          "id": "[variables('avail_ID')]"
        },
        "hardwareProfile": {
          "vmSize": "[variables('vm').size]"
        },
        "storageProfile": {
          "imageReference": "[variables('vm').imageReference]",
          "osDisk": {
            "name": "[concat(variables('vm_disk_name'),copyIndex(1))]",
            "createOption": "FromImage",
            "osType": "Linux",
            "caching": "ReadWrite"
          }
        },
        "osProfile": {
          "computerName": "[concat(variables('vm_fullname'),copyIndex(1))]",
          "adminUsername": "[variables('vm').adminUserName]",
          "linuxConfiguration": {
            "disablePasswordAuthentication": "true",
            "ssh": {
              "publicKeys": "[variables('vm').publicKeys]"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(variables('vm_nic_name'), copyindex(1)))]"
            }
          ]
        }
      },
      "resources": []
    },
    {
      "comments": "",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('vm_fullname'),copyIndex(1),'/customscript')]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "vmcopy"
      ],
      "copy": {
        "name": "scriptcopy",
        "count": "[variables('vm').count]"
      },
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[concat(variables('vm').customScript_URL, variables('vm').customScript_name)]"
          ],
          "commandToExecute": "[concat('sh ',variables('vm').customScript_name)]"
        }
      }
    }
  ],
  "outputs": {
    "fileuris": {
      "value": "[concat(variables('vm').customScript_URL, variables('vm').customScript_name)]",
      "type": "string"
    }
  }
}
